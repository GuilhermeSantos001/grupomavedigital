{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@/app/*": [
        "ts/*"
      ],
      "@/constants/*": [
        "ts/constants/*"
      ],
      "@/config/*": [
        "ts/config/*"
      ],
      "@/database/*": [
        "ts/database/*"
      ],
      "@/contracts/*": [
        "ts/contracts/*"
      ],
      "@/controllers/*": [
        "ts/controllers/*"
      ],
      "@/graphql/*": [
        "ts/graphql/*"
      ],
      "@/router/*": [
        "ts/graphql/router/*"
      ],
      "@/middlewares/*": [
        "ts/graphql/middlewares/*"
      ],
      "@/bin/*": [
        "ts/bin/*"
      ],
      "@/jobs/*": [
        "ts/jobs/*"
      ],
      "@/models/*": [
        "ts/models/*"
      ],
      "@/core/*": [
        "ts/core/*"
      ],
      "@/db/*": [
        "ts/db/*"
      ],
      "@/drivers/*": [
        "ts/drivers/*"
      ],
      "@/mongo/*": [
        "ts/mongo/*"
      ],
      "@/utils/*": [
        "ts/utils/*"
      ],
      "@/socketIO/*": [
        "ts/socketIO/*"
      ],
      "@/providers/*": [
        "ts/providers/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "*.spec.ts"
  ]
}