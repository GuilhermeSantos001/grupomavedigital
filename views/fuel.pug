extends layout

block content
  div(class="row" style="margin-top: -100vh;")
    nav(class="col-12 mt-2")
      div(class="nav nav-tabs" id="nav-tab" role="tablist")
        a(class="menu-storage nav-link active" id="nav-home-tab" data-bs-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true") Combustível
    div(class="tab-content col-12" id="nav-tabContent")
      //- Combustível
      div(class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab")
        div(class="col-12 mt-3")
          if (fuel.length) > 0
            div(class="text-center")
              h4(class="fw-bold text-center text-muted border-bottom p-2") Filtrar por descrição
              input(type="text" id="filter_description" class="form-control text-muted mb-3" onkeyup="filter_description()" placeholder="Procurar por descrição...")
            ul(class="list-group mb-5" id="ul-fuel")
              each data in fuel
                li(class="list-group-item border mb-3")
                  h4(class="fw-bold text-center text-muted border-bottom p-2") #{data['description']}
                  div(class="text-center text-white")
                    a(class="btn btn-mave1 col-sm-12 col-md-12 col-lg-2 col-xl-2 p-2 m-2" data-bs-toggle="collapse" href=`#collapse-${data['id']}-1` role="button" aria-expanded="false" aria-controls=`collapse-${data['id']}-1`)
                      | Ver informações
                    a(class="btn btn-success col-sm-12 col-md-12 col-lg-2 col-xl-2 p-2 m-2" role="button" onclick=`fuelEdit('${data['id']}')`)
                      | Editar
                    a(class="btn btn-danger col-sm-12 col-md-12 col-lg-2 col-xl-2 p-2 m-2" role="button" onclick=`fuelRemove('${data['id']}')`)
                      | Remover
                  div(class="collapse mt-2" id=`collapse-${data['id']}-1`)
                    div(class="card card-body")
                      h5(class="text-center text-muted border-bottom p-2") Informações
                      div(class="row border-bottom mt-3")
                        div(class="col-sm-12 col-md-12 col-lg-6 col-xl-6 mb-5")
                          label(for=`fuel-ID-${data['id']}`) Código
                          input(type="text" class="form-control" id=`fuel-ID-${data['id']}` value=`${data['id']}` disabled)
                        div(class="col-sm-12 col-md-12 col-lg-6 col-xl-6 mb-5")
                          label(for=`fuel-description-${data['id']}`) Descrição
                          input(type="text" class="form-control" id=`fuel-description-${data['id']}` value=`${data['description']}` disabled)
                        div(class="col-sm-12 col-md-12 col-lg-6 col-xl-6 mb-5")
                          label(for=`fuel-tank-${data['id']}`) Litros do tanque
                          input(type="text" class="form-control" id=`fuel-tank-${data['id']}` value=`${data['tank']}` disabled)
                        div(class="col-sm-12 col-md-12 col-lg-6 col-xl-6 mb-5")
                          label(for=`fuel-unitary-${data['id']}`) Valor Unitario
                          input(type="text" class="form-control" id=`fuel-unitary-${data['id']}` value=`${data['unitary']}` disabled)
                        div(class="col-12 mb-5")
                          label(for=`fuel-total-${data['id']}`) R$ Total
                          input(type="text" class="form-control" id=`fuel-total-${data['id']}` value=`${data['total']}` disabled)
          else
            p(class="mt-3") Não existem combustíveis registrados.
  script(src="/javascripts/lz-string.min.js")
  script.
    let fuellength = Number("#{fuellength}");

    $(() => {
      storage_menu_start('fuel');

      let i = 0, l = fuellength;
      for(; i < l; i++) {
        $(`#fuel-unitary-${StringPadZero(i + 1, 6)}, \
          #fuel-total-${StringPadZero(i + 1, 6)} \
        `).priceFormat({
          prefix: 'R$ ',
          centsSeparator: ',',
          thousandsSeparator: '.'
        });
      }
    })

    function gotoSystem() {
      document.location = `${baseurl}/system/?usr_token=${localStorage.getItem('usr-token')}&usr_internetadress=${localStorage.getItem('usr-internetadress')}`;
    }

    function register() {
      document.location = `${baseurl}/system/fuel/register?usr_token=${localStorage.getItem('usr-token')}&usr_internetadress=${localStorage.getItem('usr-internetadress')}`;
    }

    function fuelEdit(id) {
      document.location = `${baseurl}/system/fuel/edit/${id}?usr_token=${localStorage.getItem('usr-token')}&usr_internetadress=${localStorage.getItem('usr-internetadress')}`;
    }

    function fuelRemove(id) {
      loading(true);

      axios.request({
        method: 'POST',
        url: `${baseurl}/system/fuel/remove`,
        headers: {
          "Content-Type": "application/json",
          "usr_token": localStorage.getItem('usr-token'),
          "usr_internetadress": localStorage.getItem('usr-internetadress')
        },
        data: {
          "id": id
        }
      })
      .then(response => document.location.reload())
      .catch(error => {
        alerting(`Ocorreu um erro inesperado, fale com o administrador do sistema.`);
        console.log(error);
        loading(false);
      })
    }

    /**
      Alocações
    */
    function filter_description() {
      var input, filter, ul, li, a, i, txtValue;
      input = document.getElementById("filter_description");
      filter = input.value.toUpperCase();
      ul = document.getElementById("ul-fuel");
      li = ul.getElementsByTagName("li");

      for (i = 0; i < li.length; i++) {
        let valid = true;

        a = li[i].getElementsByTagName("h4")[0];
        txtValue = a.textContent || a.innerText;

        if (valid)
          if (txtValue.toUpperCase().indexOf(filter) > -1) {
            li[i].style.display = "";
          } else {
            li[i].style.display = "none";
          }
      }
    }